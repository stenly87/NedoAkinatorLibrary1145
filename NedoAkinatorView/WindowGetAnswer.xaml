<Window x:Class="NedoAkinatorView.WindowGetAnswer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NedoAkinatorView"
        mc:Ignorable="d"
        Title="WindowGetAnswer" Height="450" Width="800">
    <StackPanel>
        <Label Content="Кто это был? Напишите имя персонажа"/>
        <TextBox Text="{Binding Answer}"/>
        <Button Content="Запомнить" Click="Save"/>
    </StackPanel>
</Window>
